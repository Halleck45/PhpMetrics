#!/usr/bin/env php
<?php declare(strict_types=1);

use Phrozer\Phrozer;
use Phrozer\AppExit;
use Phrozer\DiFactory;

require_once dirname(__DIR__) . '/vendor/autoload.php';

$logo = "
 ____  _
|  _ \| |__  _ __ ___ _______ _ __
| |_) | '_ \| '__/ _ \_  / _ \ '__|
|  __/| | | | | | (_) / /  __/ |
|_|   |_| |_|_|  \___/___\___|_|

PHP Project Analyzer
====================================
";

$app = new Phrozer(DiFactory::container(), new AppExit, $logo);
$app->handle($_SERVER['argv']);
