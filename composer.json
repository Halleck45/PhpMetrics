{
    "name": "phpmetrics/phpmetrics",
    "replace": {
        "halleck45/phpmetrics": "*",
        "halleck45/php-metrics": "*"
    },
    "description": "Static analyzer tool for PHP : Coupling, Cyclomatic complexity, Maintainability Index, Halstead's metrics... and more !",
    "license": "MIT",
    "keywords": [
        "quality",
        "analysis",
        "testing",
        "qa"
    ],
    "authors": [
        {
            "name": "Jean-François Lépine",
            "email": "lepinejeanfrancois@yahoo.fr",
            "homepage": "http://www.lepine.pro",
            "role": "Copyright Holder"
        }
    ],
    "homepage": "http://www.phpmetrics.org",
    "support": {
        "issues": "https://github.com/PhpMetrics/PhpMetrics/issues"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.1.3"
        }
    },
    "autoload": {
        "psr-4": {
            "Phpmetrix\\": "src",
            "Hal\\": "phpmetrics/src/Hal"
        },
        "files": [
            "phpmetrics/src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Phpmetrix\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.1",
        "adhocore/cli": "^0.8.3",
        "nette/utils": "^3.1",
        "nikic/php-parser": "^4.10",
        "symfony/finder": "^4.4",
        "xynha/dicontainer": "^0.4.0"
    },
    "require-dev": {
        "pattisahusiwa/coding-standard": "^0.3.0",
        "pepakriz/phpstan-exception-rules": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpunit/phpunit": "^7.5"
    },
    "bin": [
        "phpmetrics/bin/phpmetrics"
    ],
    "extra": {
        "patches": {
            "adhocore/cli": [
                "patches/adhocore-cli-src-input-parser-php.patch"
            ]
        }
    }
}
